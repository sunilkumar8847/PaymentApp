# MongoDB Connection URLs - Replace with your own
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGODB_DIRECT_URI=mongodb://<username>:<password>@<host1>:<port>,<host2>:<port>,<host3>:<port>/<dbname>?ssl=true&authSource=admin&retryWrites=true&w=majority
MONGODB_LOCAL_URI=mongodb://localhost:27017/<dbname>

# Database Name
DB_NAME=YourDatabaseName

# MongoDB Credentials - Replace with your own
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password

# JWT Secret (for authentication)
JWT_SECRET=your_secret_key

# Server Configuration
PORT=3000
NODE_ENV=development 